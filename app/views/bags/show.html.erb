<h1><%= @bag.brand %></h1>

<p><strong>State:</strong> <%= @bag.state %></p>
<p><strong>Capacity:</strong> <%= @bag.capacity %> liters</p>
<p><strong>Usage:</strong> <%= @bag.usage %></p>
<p><strong>Address:</strong> <%= @bag.address %></p>
<p><strong>Availability:</strong> <%= @bag.availability ? 'Available' : 'Not Available' %></p>
<p><strong>Daily Price:</strong> $<%= @bag.daily_price %> per day</p>

<%= link_to 'Back to Bags', bags_path, class: 'btn btn-secondary' %>

<% if user_signed_in? && @bag.user == current_user %>
  <%= link_to 'Edit Bag', edit_bag_path(@bag), class: 'btn btn-primary' %>
  <%= link_to 'Delete Bag', bag_path(@bag), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<% end %>

<% if user_signed_in? && @bag.availability %>
  <%= link_to 'Book This Bag', new_bag_booking_path(@bag), class: 'btn btn-success' %>
<% end %>
