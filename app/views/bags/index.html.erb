<h1>Sacs disponibles</h1>

<% if @bags.any? %>
  <div class="bags">
    <% @bags.each do |bag| %>
      <div class="bag">
        <h2><%= link_to bag.brand, bag_path(bag) %></h2>
        <p><strong>Volume :</strong> <%= bag.capacity %> litres</p>
        <p><strong>Poids :</strong> <%= bag.weight %> kg</p>
        <p><strong>Usage :</strong> <%= bag.usage %></p>
        <p><strong>Ville :</strong> <%= bag.address %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p>Aucun sac disponible! Revenez plus tard!</p>
<% end %>
<%= link_to 'Mettez votre sac en location!', new_bag_path, class: 'btn btn-primary' %>
