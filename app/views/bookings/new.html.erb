<h1>Créer une réservation</h1>
<div class="container">
  <div class="card-body">
    <%= simple_form_for([@bag, @booking]) do |f| %>
      <%= f.input :start_date, as: :string, label: 'Date de départ', input_html: { type: 'date' } %>
      <%= f.input :end_date, as: :string, label: 'Date de fin', input_html: { type: 'date' } %>
      <div class="input-container">
        <%= f.input :total_price, as: :decimal , label: 'Prix total', placeholder: "Montant total"%>
        <span class="currency-symbol">€</span>
      </div>
      <%= f.submit 'Faire une demande de réservation' %>
    <% end %>
  </div>
</div>
